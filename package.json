{
  "name": "frontend-boilerplate",
  "version": "0.1.0",
  "description": "Sets up a modern frontend build pipeline",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development node dev.server.js",
    "build": "npm run lint --silent && npm run clean && npm run build:js",
    "build:js": "NODE_ENV=production webpack --display-errors",
    "pretest": "npm run lint --silent",
    "test": "mocha --compilers js:babel-register test/**/*.test.js",
    "test:watch": "npm run test -- -w",
    "lint": "eslint src/**/*.js",
    "clean": "rimraf public/assets/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marvinhagemeister/frontend-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "sass",
    "scss",
    "boilerplate"
  ],
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marvinhagemeister/frontend-boilerplate/issues"
  },
  "homepage": "https://github.com/marvinhagemeister/frontend-boilerplate#readme",
  "devDependencies": {
    "babel-core": "^6.6.4",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.6.0",
    "browser-sync": "^2.11.1",
    "chai": "^3.5.0",
    "eslint": "^2.2.0",
    "eslint-loader": "^1.3.0",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.9.1"
  },
  "dependencies": {
    "include-media": "^1.4.2",
    "normalize.css": "^3.0.3"
  }
}
